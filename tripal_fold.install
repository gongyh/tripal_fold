/** 
 * Installation of the tripal protein structure module
 */

/**
 * Implementation of hook_schema().
 * 
 * @ingroup tripal_protein_structure
 */
function tripal_fold_schema() {
    $schema['tripal_fold'] = array(
        'fields' => array(
	    'feature_id' => array(
		'type' => 'int',
		'unsigned' => TRUE,
		'not null' => TRUE,
   	    ),
	    'pdb_id' => array(
		'type' => 'serial',
		'unsigned' => TRUE,
		'not null' => TRUE,
	    ),
	    'pdb_loc' => array(
		'type' => 'text',
		'not null' => TRUE,
	    ),
	),
	'primary key' => array('pdb_id'),
	'foreign keys' => array(
	    'feature_id' => array(
		'table' => 'feature',
		'columns' => array(
		    'feature_id' => 'feature_id',
		)
	    )
	)
    );

    return $schema;
}

